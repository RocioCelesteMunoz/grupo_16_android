<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/lblInfoMenu"
        android:layout_width="276dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/lblMenu"
        android:textColor="@color/azul_230"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="66dp"
        android:layout_marginStart="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975"
        app:srcCompat="@drawable/app_icon" />

    <ImageView
        android:id="@+id/btnExit"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/exit_icon" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="381dp"
        android:layout_height="191dp"
        android:layout_margin="10dp"
        android:layout_marginStart="12dp"
        app:cardBackgroundColor="@color/azul_179"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="145dp"
                android:layout_height="134dp"
                app:srcCompat="@drawable/descuento_20" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cod20"
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:gravity="center"
                        android:text="@string/cod2x1"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="20MAS100"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/body20"
                    android:layout_width="192dp"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:text="@string/desc_20"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="381dp"
        android:layout_height="191dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/azul_230"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="131dp"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    app:cardBackgroundColor="@color/white"
                    app:srcCompat="@drawable/desc_10" />


                <TextView
                    android:id="@+id/bodyRetiro"
                    android:layout_width="192dp"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:text="@string/bodyRetiro"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/basesYcondiciones"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="@string/solicitar_caja"
                android:textSize="12sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="381dp"
        android:layout_height="191dp"
        android:layout_margin="10dp"
        android:layout_marginStart="8dp"
        app:cardBackgroundColor="@color/azul_230"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.168">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img2x1"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                app:srcCompat="@drawable/offer2x1"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/body2X1"
                    android:layout_width="192dp"
                    android:layout_height="80dp"
                    android:gravity="center_horizontal"
                    android:text="@string/TwoForOne"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cod2x1"
                        android:layout_width="wrap_content"
                        android:layout_height="58dp"
                        android:gravity="center"
                        android:text="@string/cod2x1"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="2X1PRM1"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>